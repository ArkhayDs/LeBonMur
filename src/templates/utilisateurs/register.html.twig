{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="/style/loginStyle.css">
{% endblock %}

{% block main %}
    <div class="login_container">
        <h2>S'inscrire</h2>
        <form method="post">
            <div class="input_container">
                <input type="email" id="email" class="input_input" placeholder=" ">
                <label for="email" class="input_label">Nom</label>
            </div>
            <div class="input_container">
                <input type="text" id="name" class="input_input" placeholder=" ">
                <label for="name" class="input_label">Nom</label>
            </div>
            <div class="input_container">
                <input type="password" id="password" class="input_input" placeholder=" ">
                <label for="password" class="input_label">Mot de passe</label>
            </div>
            <input type="hidden" name="csrf" value="{{ csrf_token('login_form') }}">
            <input class="buttonHover" type="submit" value="Connexion">

            <p class="linkLitelFont">
                Vous avez un compte ?
                <a class="litelhoverLink" href="register.html.twig">Se connecter</a>
            </p>
        </form>
    </div>
{% endblock %}